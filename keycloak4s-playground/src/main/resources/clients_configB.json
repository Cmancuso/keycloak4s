{
  "service": "api-client",
  "enforcementMode": "ENFORCING",
  "paths": [
    {
      "path": "*",
      "methodRoles": [
        {
          "method": "*",
          "roles": [ "admin", "super-admin" ]
        }
      ]
    },
    {
      "path" : "segment/*",
      "methodRoles" : [
        {
          "method" : "*",
          "roles" : { "and": [ "segment-star", "segment" ] }
        }
      ]
    },
    {
      "path" : "segment",
      "methodRoles" : [
        {
          "method" : "*",
          "roles" : "segment"
        }
      ]
    },
    {
      "path": "{{sites}}"
    },
    {
      "path": "{{accounts}}"
    },
    {
      "path": "{{clients}}"
    },
    {
      "path": "{{accounts}}/{{sites}}"
    },
    {
      "path": "{{clients}}/{{accounts}}"
    },
    {
      "path": "{{clients}}/{{accounts}}/{{sites}}",
      "methodRoles" : [
        {
          "method" : "GET",
          "roles" : [ "test-read", "test-write", "test-delete" ]
        },
        {
          "method" : "POST",
          "roles" : [ "test-write", "test-delete" ]
        },
        {
          "method" : "DELETE",
          "roles" : "test-delete"
        },
        {
          "method" : "HEAD",
          "roles" : "test-head"
        }
      ]
    },
    {
      "path": "{{clients}}/{id}/{{accounts}}/{id}/{{sites}}/{id}"
    },
    {
      "path": "test/segment",
      "methodRoles": [
        {
          "method": "*",
          "roles": {
            "and" : [
              {
                "or" : [ "client-view", "client-write", "client-delete" ]
              },
              {
                "or" : [ "account-view", "account-write", "account-delete" ]
              },
              {
                "or" : [ "site-view", "site-write", "site-delete" ]
              }
            ]
          }
        }
      ]
    }
  ],
  "segments": [
    {
      "segment": "sites",
      "auth": [
        {
          "method": "GET",
          "roles": [
            "site-view",
            "site-write",
            "site-delete"
          ]
        },
        {
          "method": "POST",
          "roles": [
            "site-write",
            "site-delete"
          ]
        },
        {
          "method": "PATCH",
          "roles": [
            "site-write",
            "site-delete"
          ]
        },
        {
          "method": "DELETE",
          "roles": [
            "site-delete"
          ]
        }
      ]
    },
    {
      "segment": "clients",
      "auth": [
        {
          "method": "GET",
          "roles": [
            "client-view",
            "client-write",
            "client-delete"
          ]
        },
        {
          "method": "PATCH",
          "roles": [
            "client-write",
            "client-delete"
          ]
        },
        {
          "method": "POST",
          "roles": [
            "client-write",
            "client-delete"
          ]
        },
        {
          "method": "DELETE",
          "roles": [
            "client-delete"
          ]
        }
      ]
    },
    {
      "segment": "accounts",
      "auth": [
        {
          "method": "*",
          "roles": ["accounts-delete"]
        },
        {
          "method": "GET",
          "roles": [
            "account-view",
            "account-write",
            "account-delete"
          ]
        },
        {
          "method": "PATCH",
          "roles": [
            "account-write",
            "account-delete"
          ]
        },
        {
          "method": "POST",
          "roles": [
            "account-write",
            "account-delete"
          ]
        },
        {
          "method": "DELETE",
          "roles": [
            "account-delete"
          ]
        }
      ]
    }
  ]
}